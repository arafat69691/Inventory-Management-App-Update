<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/dashboardFragment">

    <!-- Dashboard Fragment -->
    <fragment
        android:id="@+id/dashboardFragment"
        android:name="com.example.inventoryapp.ui.DashboardFragment"
        android:label="Dashboard">
        <!-- Navigate to Inventory List -->
        <action
            android:id="@+id/action_dashboard_to_inventoryList"
            app:destination="@id/inventoryListFragment" />
    </fragment>

    <!-- Inventory List Fragment -->
    <fragment
        android:id="@+id/inventoryListFragment"
        android:name="com.example.inventoryapp.ui.InventoryListFragment"
        android:label="Inventory List">
        <!-- Navigate to Add Item -->
        <action
            android:id="@+id/action_inventoryList_to_addItem"
            app:destination="@id/addItemFragment" />
        <!-- Navigate to Item Detail -->
        <action
            android:id="@+id/action_inventoryList_to_itemDetail"
            app:destination="@id/itemDetailFragment" />
        <action
            android:id="@+id/action_inventoryListFragment_to_editItemFragment"
            app:destination="@id/editItemFragment" />
    </fragment>

    <!-- Add Item Fragment -->
    <fragment
        android:id="@+id/addItemFragment"
        android:name="com.example.inventoryapp.ui.AddItemFragment"
        android:label="Add Item" />

    <!-- Item Detail Fragment -->
    <fragment
        android:id="@+id/itemDetailFragment"
        android:name="com.example.inventoryapp.ui.ItemDetailFragment"
        android:label="Item Details">
        <argument
            android:name="itemId"
            app:argType="integer" />
        <!-- Navigate to Edit Item -->
        <action
            android:id="@+id/action_itemDetail_to_editItem"
            app:destination="@id/editItemFragment" />
    </fragment>

    <!-- Edit Item Fragment -->
    <fragment
        android:id="@+id/editItemFragment"
        android:name="com.example.inventoryapp.ui.EditItemFragment"
        android:label="Edit Item">
        <argument
            android:name="itemId"
            app:argType="integer" />
    </fragment>

</navigation>

